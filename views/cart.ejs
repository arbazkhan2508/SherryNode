<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/My vehicle.css">
    <link rel="stylesheet" href="../stylesheets/nav.css">
    <link rel="stylesheet" href="../stylesheets/loco.css">
    <link rel="stylesheet" href="../stylesheets/footer.css">
    <link rel="stylesheet" href="../stylesheets/search.css">
</head>
<body>

    <% include ./partials/nav.ejs %>
    <% include ./partials/search.ejs %>
    <div id="main">
        <h1>Your Cart</h1>
        <% if(user.vehicles.length >0 ){ %>
            <div id="courses">
               <% user.carts.forEach(function(vh){ %>
                    <div style="width:21vw;" id="singleCourse">
                        <div onclick="window.location.href='/car/<%= vh._id %>'" style="height: 25vh;" id="image">
                           <img src="../images/uploads/vehicleimages/<%= vh.pic[0] %>" alt="">
                        </div>
                        <h2 id="courseName" ><%= vh.vehicleBrand %></h2>
                        <h4 id="courseName" ><%= vh.vehicleName %></h4>
                        <div style="width: 100%;display: flex;align-items: flex-end;justify-content: flex-end;" class="div">
                            <h6 style="font-weight: 550;letter-spacing: 1px;background-color: #fff;color: #111;padding: 10px 20px;border-radius: 20px;">
                                <% if(vh.Sell === true){ %>
                                     For Rent 
                                <% }else{ %>
                                    For Sell 
                                <% } %>
                            </h6>
                        </div>
                        
                        
                    <div id="button">
                                    <div onclick="window.location.href='/addwishlist/<%= vh._id %>'" id="fees">
                                        <p>Move To Wishlist</p>
                                        <i class="ri-checkbox-circle-fill"></i>
                                    </div>
                                    
                                    <div onclick="window.location.href='/removecart/<%= vh._id %>'" id="pay">
                                         <p>Remove Cart</p>
                                    </div>
                    </div>
                    </div>
               <% }) %>
             </div>
          <% }else{ %>
                <div class="nov">
                    <h1 id="notEnrollYet">
                        You are not Added any  Vehicle  Yet
                         <br>
                        <button onclick="window.location.href='/av'"> <a href="/av">Add now</a></button> 
                   </h1>
                </div>
         <% } %>

    </div>

    <% include ./partials/loco.ejs  %>
    <script src="../javascripts/nav.js"></script>
    <script src="../javascripts/loader.js"></script>
    <script src="../javascripts/search.js"></script>
</body>
</html>